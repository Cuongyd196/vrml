#VRML V2.0 utf8
WorldInfo { title "Bai tap 1 - Canh VRML don gian" }
Viewpoint { position 0 1.2 6 }
Background { skyColor [0.70 0.85 1.00] }
NavigationInfo { headlight TRUE }
DirectionalLight { direction -0.5 -1 -0.3 intensity 0.9 }

# --- Mặt đất: hộp mỏng màu xanh lá ---
Transform {
  translation 0 -0.6 0
  children [
    Shape {
      geometry Box { size 8 0.2 8 }
      appearance Appearance {
        material Material { diffuseColor 0.20 0.60 0.20 }
      }
    }
  ]
}

# --- Nhóm ngôi nhà (thân + mái) ---
DEF House Transform {
  children [
    # Thân nhà: hình hộp đỏ (cao 1.0) - đặt ngay trên mặt đất
    Shape {
      geometry Box { size 1.6 1.0 1.0 }
      appearance Appearance {
        material Material { diffuseColor 0.85 0.20 0.20 }
      }
    }

    # Mái nhà: hình nón đỏ, đặt lên đỉnh thân
    Transform {
      translation 0 0.80 0           # 0.5 (nửa thân) + 0.3 (nửa chiều cao mái)
      children [
        Shape {
          geometry Cone { bottomRadius 0.8 height 0.6 }
          appearance Appearance {
            material Material { diffuseColor 0.85 0.20 0.20 }
          }
        }
      ]
    }
  ]
}

# --- Mặt trời: hình cầu vàng treo lơ lửng ---
Transform {
  translation 2 2 -2
  children [
    Shape {
      geometry Sphere { radius 0.35 }
      appearance Appearance {
        material Material {
          diffuseColor 1.00 0.90 0.00
          emissiveColor 1.00 0.80 0.00   # trông “phát sáng” nhẹ
        }
      }
    }
  ]
}
