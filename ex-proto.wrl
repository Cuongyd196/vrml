#VRML V2.0 utf8

PROTO RedBox [
  field SFVec3f boxSize 1 1 1
]
{
  Shape {
    geometry Box { size IS boxSize }
    appearance Appearance {
      material Material { diffuseColor 1 0 0 }
    }
  }
}

# Sử dụng RedBox với kích thước mặc định
RedBox { }

# Sử dụng RedBox với kích thước tùy chỉnh
Transform {
  translation 2 0 0
  children [
    RedBox { boxSize 2 0.5 1 }
  ]
}